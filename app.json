{
    "expo": {
        "name": "Monitoramento App",
        "slug": "monitoramento-app",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "routemonitoring",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/images/splash-icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "UIBackgroundModes": ["location", "fetch"]
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "permissions": [
                "ACCESS_BACKGROUND_LOCATION",
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION",
                "FOREGROUND_SERVICE",
                "RECEIVE_BOOT_COMPLETED",
                "WAKE_LOCK",
                "SCHEDULE_EXACT_ALARM",
                "INTERNET",
                "android.permission.ACCESS_COARSE_LOCATION",
                "android.permission.ACCESS_FINE_LOCATION",
                "ACCESS_BACKGROUND_LOCATION",
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION",
                "FOREGROUND_SERVICE",
                "RECEIVE_BOOT_COMPLETED",
                "WAKE_LOCK",
                "SCHEDULE_EXACT_ALARM",
                "INTERNET",
                "android.permission.ACCESS_COARSE_LOCATION",
                "android.permission.ACCESS_FINE_LOCATION"
            ],
            "config": {
                "googleMaps": {
                    "apiKey": "Insert_Your_Google_Maps_API_Key_Here"
                }
            },
            "edgeToEdgeEnabled": true,
            "package": "com.app.monitoramentoapp"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-location",
            "expo-task-manager",
            "expo-background-task",
            [
                "expo-sqlite",
                {
                    "enableFTS": true,
                    "useSQLCipher": true,
                    "android": {
                        "enableFTS": false,
                        "useSQLCipher": false
                    },
                    "ios": {
                        "customBuildFlags": [
                            "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
                        ]
                    }
                }
            ],
            [
                "expo-build-properties",
                {
                    "android": {
                        "gradleProperties": {}
                    }
                }
            ],
            "expo-secure-store"
        ],
        "experiments": {
            "typedRoutes": true
        },
        "owner": "edmir.soares"
    }
}
